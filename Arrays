Kadane's Algorithm


class Solution{

    // arr: input array
    // n: size of array
    //Function to find the sum of contiguous subarray with maximum sum.
    long maxSubarraySum(int arr[], int n){
        
        // Your code here
        int max=arr[0];
        int curr=0;
        
        for(int i=0; i<n; i++)
        {
            curr = curr + arr[i];
            
            max=Integer.max(max,curr);
            
            if(curr<0)
            {
                curr=0;
            }
        }
        
        return max;
        
    }
    
}
